<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TellMe.Pages.ProfilePage">

    <ContentPage.Resources>
        <ResourceDictionary>

            <Style x:Key="GoToLessonsButton" BasedOn="{StaticResource NavigationButton}" TargetType="Button">
                <Setter Property="VerticalOptions" Value="EndAndExpand"/>
            </Style>
            
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            
            <Button Text="Study!" Style="{StaticResource GoToLessonsButton}" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>